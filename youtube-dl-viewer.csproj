<Project Sdk="Microsoft.NET.Sdk.Web">

    <PropertyGroup>
        <TargetFramework>netcoreapp3.1</TargetFramework>
        <RootNamespace>youtube_dl_viewer</RootNamespace>
    </PropertyGroup>

    <PropertyGroup>
        <Title>youtube-dl-viewer</Title>
        <Copyright>Copyright Â© Mikescher 2020</Copyright>
        <AssemblyVersion>0.27</AssemblyVersion>
        <FileVersion>0.27</FileVersion>
        <Version>0.27</Version>
    </PropertyGroup>

    <ItemGroup>
      <Content Update="Pages\Index.cshtml">
        <ExcludeFromSingleFile>true</ExcludeFromSingleFile>
        <CopyToPublishDirectory>PreserveNewest</CopyToPublishDirectory>
      </Content>
      <Content Update="Pages\Jobs.cshtml">
        <ExcludeFromSingleFile>true</ExcludeFromSingleFile>
        <CopyToPublishDirectory>PreserveNewest</CopyToPublishDirectory>
      </Content>
    </ItemGroup>

    <ItemGroup>
      <PackageReference Include="Newtonsoft.Json" Version="12.0.3" />
    </ItemGroup>

    <ItemGroup>
        <EmbeddedResource Include="staticexternal\*" />
        <EmbeddedResource Include="staticfiles\*" />
    </ItemGroup>

</Project>
